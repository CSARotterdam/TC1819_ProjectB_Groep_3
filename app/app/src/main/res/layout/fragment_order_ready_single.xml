<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="OrderID"/>

    <TextView
        android:id="@+id/OrderID_order_ready"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="User"/>

    <TextView
        android:id="@+id/user_email_order_ready"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"/>

    <ListView
        android:id="@+id/listResponse"
        android:layout_width="match_parent"
        android:layout_height="300dp">

    </ListView>

    <!-- Button set Ready -->
    <Button
        android:id="@+id/btnSetOrderReadySingle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/MarkOrderReady" />

    <Button
        android:id="@+id/btnSetOrderDeniedSingle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/wijs_order_af" />

</LinearLayout>